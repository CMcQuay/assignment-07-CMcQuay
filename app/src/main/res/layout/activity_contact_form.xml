<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        style="@style/AppTheme.ContactForm.Button"
        android:text="@string/save_button_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputWebsite" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputWebsite"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="@string/website_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toBottomOf="@+id/textInputAddress"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/iconWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_public_black_24dp"
        android:theme="@style/AppTheme.ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputWebsite" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputAddress"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="@string/address_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toBottomOf="@+id/textInputEmail"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/iconAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_place_black_24dp"
        android:theme="@style/AppTheme.ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputAddress" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="@string/email_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toBottomOf="@+id/textInputPhone"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_email_black_24dp"
        android:theme="@style/AppTheme.ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputEmail" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputPhone"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="@string/phone_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toBottomOf="@+id/textInputLastName"
        android:singleLine="true"/>

    <ImageView
        android:theme="@style/AppTheme.ImageView"
        android:id="@+id/iconPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_phone_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputPhone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputLastName"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="@string/last_name_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toBottomOf="@+id/textInputFirstName"
        android:singleLine="true"/>

    <ImageView
        android:theme="@style/AppTheme.ImageView"
        android:id="@+id/iconName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_perm_identity_black_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputFirstName" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputFirstName"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:hint="@string/first_name_hint"
        android:theme="@style/AppTheme.ContactForm.EditText"
        app:layout_constraintStart_toEndOf="@+id/iconName"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>